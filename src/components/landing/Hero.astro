---
import Banner from "@/components/landing/Banner.astro";
import LatestBlogs from "@/components/landing/LatesBlogs.astro";
const posts = (await Astro.glob('/src/pages/blog/*.{md,mdx}')).sort(

    (a, b) =>
        new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
).slice(0, 4);
---

<section class="border-white border-b">
  <div class="mx-auto border-white border-x max-w-7xl">
    <div class="mx-auto">
      <div class="mx-auto lg:pt-28 gradient-grid px-8 py-12">
        <h1 class="text-white font-display uppercase text-3xl lg:text-7xl">
          Backend Developer with over 3 years of experience. Specializing in crafting robust backend systems and APIs.
        </h1>
      </div>
      <Banner />
        <div class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2">
          {posts.map((post) => (
              <div class="mt-3 p-2  flex-shrink-0">
                <a href={post.url} class="flex flex-col h-full">
                  <p class="text-ed642c overflow-hidden overflow-ellipsis max-h-25 min-h-25 flex-grow">
                    {post.frontmatter.description}
                  </p>
                  <div class="flex flex-col justify-between mt-3 px-2 mb-2">
                    <span class="block font-semibold mt-3 text-carrot">{post.frontmatter.title}</span>
                    <span class="block text-eagle">{post.frontmatter.author.name}</span>
                  </div>
                </a>
              </div>
            ))}
            </div>
    </div>
  </div>
</section>
