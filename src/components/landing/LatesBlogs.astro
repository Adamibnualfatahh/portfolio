---
const posts = await Astro.glob('/src/pages/blog/*.{md,mdx}');
---
<section class="border-white border-b border-e border-l">
  <div class="p-10">
    <div class="p-8">
      <p class="text-white font-display uppercase text-3xl lg:text-6xl">
        Scroll. Read. Smile. Repeat.
      </p>
    </div>

    <div class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2">
      {posts.map((post) => (
          <div key={post.url} class="mt-3 p-2 border-white border-l border-e border-t border-b px-2 bg-opacity-10 bg-white hover:border-carrot">
            <a href={post.url} class="flex flex-col h-full">
              <p class="text-ed642c overflow-hidden overflow-ellipsis max-h-25 min-h-25 flex-grow">
                {post.frontmatter.description}
              </p>
              <div class="flex flex-col justify-between mt-3 border-white border-l border-e px-2 mb-2 bg-opacity-10 bg-white hover:border-carrot">
                <span class="block font-semibold mt-3 text-carrot">{post.frontmatter.title}</span>
                <span class="block text-eagle">{post.frontmatter.author.name}</span>
              </div>
            </a>
          </div>
        ))}
        </div>
        </div>
</section>
